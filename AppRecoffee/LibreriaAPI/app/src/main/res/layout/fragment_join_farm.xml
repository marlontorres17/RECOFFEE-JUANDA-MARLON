<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".JoinFarmFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título con ícono -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/icono_finca"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Icono de Unirse a Finca"
                    android:src="@drawable/ic_harvest" />

                <TextView
                    android:id="@+id/tv_titulo_unirse_finca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unirse a Finca"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Campo Número de Identificación -->
            <TextView
                android:id="@+id/textView_identification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número de Identificación:"
                android:textColor="#F0F0F0"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_identification_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese su número de identificación"
                android:background="@drawable/edit_text_background"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:inputType="number" />

            <!-- Campo Código Único de Finca -->
            <TextView
                android:id="@+id/textView_unique_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Código Único de la Finca:"
                android:textColor="#F0F0F0"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_unique_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese el código único de la finca"
                android:background="@drawable/edit_text_background"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Botón para Unirse a la Finca -->
            <Button
                android:id="@+id/button_join_farm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#8F2BED"
                android:padding="12dp"
                android:text="Unirse a Finca"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
