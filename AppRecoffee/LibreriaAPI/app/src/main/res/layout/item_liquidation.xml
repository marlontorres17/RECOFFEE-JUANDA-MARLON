<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:background="@drawable/card_background"
    android:elevation="6dp"> <!-- Elevación para sombra más suave -->

    <!-- Header con el nombre del recolector y botón de eliminar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <!-- Nombre del recolector -->
        <TextView
            android:id="@+id/textView_person"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Recolector"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#F0F0F0" /> <!-- Texto en color claro -->

        <!-- Botón de eliminar -->
        <ImageButton
            android:id="@+id/button_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Eliminar"
            android:src="@drawable/ic_delete" />
    </LinearLayout>

    <!-- Información de la liquidación -->
    <TextView
        android:id="@+id/textView_total_kilos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kilos totales"
        android:textSize="16sp"
        android:textColor="#E0E0E0" /> <!-- Texto en gris claro -->

    <TextView
        android:id="@+id/textView_total_benefit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total en servicios"
        android:textSize="16sp"
        android:textColor="#E0E0E0" /> <!-- Texto en gris claro -->

    <TextView
        android:id="@+id/textView_total_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total a pagar"
        android:textSize="16sp"
        android:textColor="#E0E0E0" /> <!-- Texto en gris claro -->

</LinearLayout>
